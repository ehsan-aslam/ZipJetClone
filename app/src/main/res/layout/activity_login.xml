<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_header">

        <!--<ImageView-->
        <!--android:id="@+id/backArrowImageView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:src="@drawable/tapimage" />-->

        <ImageView
            android:id="@+id/pricingImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:src="@drawable/priceimageview" />

        <ImageView
            android:id="@+id/showAlbumImageImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:src="@android:drawable/ic_menu_share" />
        <TextView
            android:id="@+id/postHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="@dimen/_72px"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/searchImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"

            android:src="@drawable/tapimage"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/homeImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/tapimage"
            android:visibility="gone"/>

        <putitout.zipjetclone.ui.widgets.TypefaceTextView
            android:id="@+id/headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_88px"
            android:text="Login"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/menuImageView"
            android:textColor="@android:color/white"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tapimage"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_arrow"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.8"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_below="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.7"
        android:orientation="horizontal"
        android:background="@drawable/emailbg">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/greyColor"
            android:layout_weight="3.8"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"/>

        <ImageView
            android:id="@+id/emaiImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.9"
            android:src="@drawable/email"
            android:visibility="visible" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.8"/>

        <EditText
            android:id="@+id/emailLoginEitText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="46"
            android:hint="Email Address"
            android:textColorHint="@color/darkGrey"
            android:textSize="@dimen/_65px"
            android:singleLine="true"
            android:textColor="@color/darkGreen"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollbars="horizontal"
            android:gravity="center|start"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/greyColor"
            android:layout_weight="3.8"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.2"
        android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.7"
            android:orientation="horizontal"
            android:background="@drawable/emailbg">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/greyColor"
                android:layout_weight="3.8"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"/>

            <ImageView
                android:id="@+id/emailImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9"
                android:src="@drawable/password_icon"
                android:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.8"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="46"
                android:hint="Password"
                android:textColorHint="@color/darkGrey"
                android:textSize="@dimen/_65px"
                android:singleLine="true"
                android:textColor="@color/darkGreen"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="35"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollbars="horizontal"
                android:gravity="center|start"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/greyColor"
                android:layout_weight="3.8"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12.8"
            android:visibility="visible"/>

    <ImageView
        android:id="@+id/confirmImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.8"
        android:src="@drawable/confirm_icon"
        android:visibility="visible"/>


    </LinearLayout>


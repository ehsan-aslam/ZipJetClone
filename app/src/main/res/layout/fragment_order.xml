            android:layout_height="0dp"
            android:layout_weight="7.7"
            android:orientation="horizontal"
            android:background="@drawable/request_bg">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/greyColor"
                android:layout_weight="3.8"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.8"/>

            <ImageView
                android:id="@+id/requestImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.9"
                android:src="@drawable/write_icon"
                android:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.8"/>

            <EditText
                android:id="@+id/requestEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="46"
                android:hint="Write any requests you have here"
                android:textColorHint="@color/darkGrey"
                android:textSize="@dimen/_65px"
                android:singleLine="true"
                android:textColor="@color/darkGreen"
                android:background="@null"
                android:maxLength="250"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollbars="horizontal"
                android:gravity="center|start"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/greyColor"
                android:layout_weight="3.8"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"
            android:visibility="visible"/>


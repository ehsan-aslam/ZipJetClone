        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16.5"
            android:layout_below="@+id/view1"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/greyColor"
                android:layout_weight="3.8"/>

            <LinearLayout
                android:id="@+id/pickUpLinearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="46"
                android:background="@drawable/pickup_time_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pickUpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Up"
                    android:textColor="@color/greenColor"
                    android:textSize="@dimen/_75px"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/pickUpTimeTexView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00 - 02:00"
                    android:textColor="@color/darkish_grey"
                    android:textSize="@dimen/_88px"
                    android:gravity="center"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/pickUpDateTexView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02.June"
                    android:textColor="@color/darkGreen"
                    android:textSize="@dimen/_66px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dropOffLinearLayout"
                android:layout_width="0dp"

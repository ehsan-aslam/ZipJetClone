                android:layout_height="match_parent"
                android:layout_weight="3.9"
                android:src="@drawable/place_icon"
                android:visibility="visible"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.8"/>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:minWidth="300dp"
    android:minHeight="100dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/menuSeeFriendShipLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="-5dp"
        android:gravity="end">

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/_76px"

            android:layout_marginRight="25dp"
            android:gravity="center|top"
            android:textStyle="bold|italic"
            android:background="@null" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color"/>

    <LinearLayout
        android:id="@+id/menuReportLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/menuRepotLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ListView
            android:id="@+id/calendarDateListView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="45.5"
            android:layout_marginTop="10dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="10.0sp"
            android:listSelector="@android:color/transparent"
            />

        <View

            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:background="@color/separator_color"/>

        <ListView
            android:id="@+id/calendarTimeListView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="45.5"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="10.0sp"
            android:layout_marginTop="10dp"
            android:listSelector="@android:color/transparent"/>

    </LinearLayout>
    </LinearLayout>


</LinearLayout>

